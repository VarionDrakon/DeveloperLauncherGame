                </Button>
                <Button Style="{DynamicResource broochButtonContent}" x:Name="broochButtonContentServer_Content2" Cursor="Hand" BorderBrush="{x:Null}" Foreground="{x:Null}">
                </Button>
                <Button Style="{DynamicResource broochButtonContent}" x:Name="broochButtonContentServer_Content3" Cursor="Hand" BorderBrush="{x:Null}" Foreground="{x:Null}">
                </Button>
